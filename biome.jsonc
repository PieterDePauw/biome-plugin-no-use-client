{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"!node_modules",
			"!dist",
			"!.turbo",
			"!build",
			"!out/",
			"!.next",
			"!.vercel"
		]
	},
	"extends": [ "biome-plugin-no-use-client/next" ],
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedImports": "off"
			}
		}
	}
}
