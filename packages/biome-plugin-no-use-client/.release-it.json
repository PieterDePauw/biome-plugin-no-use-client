{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "requireCommits": false,
    "addUntrackedFiles": false,
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "hooks": {
    "before:init": ["pnpm test"],
    "after:bump": "echo 'Version bumped to ${version}'",
    "before:git:release": "echo 'Creating git tag v${version}'",
    "after:git:release": "echo 'Successfully created and pushed git tag v${version}'"
  }
}