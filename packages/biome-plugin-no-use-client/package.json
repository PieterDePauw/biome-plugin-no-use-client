{
	"name": "biome-plugin-no-use-client",
	"version": "0.0.1",
	"description": "Biome GritQL plugin that errors when Next.js page/layout files contain a `use client` directive.",
	"author": "Pieter",
	"license": "MIT",
	"keywords": [
		"biome",
		"biome.js",
		"plugin",
		"grit",
		"gritql",
		"next.js",
		"nextjs",
		"linter"
	],
	"files": [
		"src",
		"app-router.jsonc",
		"README.md"
	],
	"exports": {
		"./app-router": "./app-router.jsonc",
		"./package.json": "./package.json"
	},
	"imports": {
		"@/*": "./*"
	},
	"packageManager": "pnpm@10.22.0",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"format": "biome format",
		"format:fix": "biome format --write",
		"check": "biome check .",
		"check:fix": "biome check . --fix",
		"lint": "biome check .",
		"lint:fix": "biome check . --fix"
	},
	"devDependencies": {
		"@types/node": "22.19.1",
		"@types/react": "^19.2.4",
		"react": "^19.2.0",
		"vitest": "^4.0.8"
	},
	"peerDependencies": {
		"@biomejs/biome": "^2.3.5"
	}
}
