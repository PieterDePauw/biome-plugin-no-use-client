{
	"name": "@test/strict",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"description": "Strict validation test application for Biome plugin",
	"scripts": {
		"dev": "next dev --port 3003",
		"build": "next build",
		"start": "next start --port 3003",
		"format": "biome format",
		"format:fix": "biome format --write",
