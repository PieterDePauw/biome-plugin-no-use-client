	"dependencies": {
		"next": "^15.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"biome-plugin-no-use-client": "workspace:*",
		"@biomejs/biome": "^2.3.5",
		"@types/node": "^22.0.0",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"typescript": "^5.0.0"
	}
}
