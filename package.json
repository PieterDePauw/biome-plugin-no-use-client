{
	"name": "biome-plugin-no-use-client",
	"version": "0.2.0",
	"description": "Monorepo for Biome GritQL plugin testing with multiple Next.js applications",
	"author": "PieterDePauw",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PieterDePauw/biome-plugin-no-use-client.git",
		"directory": "packages/biome-plugin-no-use-client"
	},
	"homepage": "https://github.com/PieterDePauw/biome-plugin-no-use-client/tree/main/packages/biome-plugin-no-use-client#readme",
	"bugs": {
		"url": "https://github.com/PieterDePauw/biome-plugin-no-use-client/issues"
	},
	"keywords": [ "biome", "biome.js", "plugin", "grit", "gritql", "next.js", "nextjs", "linter" ],
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"lint": "turbo run lint",
		"lint:expect-errors": "turbo run lint:expect-errors",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"format:fix": "turbo run format:fix",
		"check": "turbo run check",
		"check:fix": "turbo run check:fix",
		"dev": "turbo run dev --parallel",
		"clean": "turbo run clean && rm -rf node_modules .turbo",
		"release": "cd packages/biome-plugin-no-use-client && pnpm release"
	},
	"devDependencies": {
		"biome-plugin-no-use-client": "workspace:*",
		"turbo": "^2.6.1",
		"@biomejs/biome": "^2.3.5",
		"vitest": "^4.0.8",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.22.0",
	"engines": {
		"node": ">=18"
	}
}
