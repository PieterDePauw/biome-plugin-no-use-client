{
	"name": "biome-plugin-no-use-client-monorepo",
	"version": "0.0.1",
	"private": true,
	"description": "Monorepo for Biome GritQL plugin testing with multiple Next.js applications",
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"lint": "turbo run lint",
		"dev": "turbo run dev --parallel",
		"clean": "turbo run clean && rm -rf node_modules .turbo"
	},
	"devDependencies": {
		"turbo": "^2.3.3",
		"@biomejs/biome": "^2.3.5"
	},
	"packageManager": "pnpm@10.22.0",
	"engines": {
		"node": ">=18"
	}
}
