{
	"name": "biome-plugin-no-use-client-monorepo",
	"version": "0.0.1",
	"private": true,
	"description": "Monorepo for Biome GritQL plugin testing with multiple Next.js applications",
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"test:watch": "turbo run test:watch",
		"lint": "turbo run lint",
		"lint:expect-errors": "turbo run lint:expect-errors",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"format:fix": "turbo run format:fix",
		"check": "turbo run check",
		"check:fix": "turbo run check:fix",
		"dev": "turbo run dev --parallel",
		"clean": "turbo run clean && rm -rf node_modules .turbo",
		"release": "cd packages/biome-plugin-no-use-client && pnpm release"
	},
	"devDependencies": {
		"biome-plugin-no-use-client": "workspace:*",
		"turbo": "^2.6.1",
		"@biomejs/biome": "^2.3.5",
		"vitest": "^4.0.8",
		"typescript": "^5.9.3"
	},
	"packageManager": "pnpm@10.22.0",
	"engines": {
		"node": ">=18"
	}
}
